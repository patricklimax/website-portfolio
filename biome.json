{
	"formatter": {
		"enabled": true,
		"include": ["/app"],
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100,
		"attributePosition": "multiline"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "none",
			"arrowParentheses": "asNeeded",
			"bracketSameLine": true
		},
		"globals": ["$", "_"]
	},

	"linter": {
		"enabled": true
	},

	"json": {
		"parser": {
			"allowComments": true,
			"allowTrailingCommas": true
		}
	}
}
